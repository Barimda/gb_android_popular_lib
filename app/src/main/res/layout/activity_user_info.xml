<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.users.UserInfoActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/user_info_activity_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_info_activity_text_view_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/username_text_size"
        android:textStyle="bold"
        tools:text="Username" />

    <TextView
        android:id="@+id/user_info_activity_text_view_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="user ID" />

    <Button
        android:id="@+id/user_info_activity_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_info_activity_button_back_text" />
</LinearLayout>